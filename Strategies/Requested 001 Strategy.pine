gmo_slow_ma1(src, type, len) =>
    if type == "modframa"
        modframa(src, len, _gmo_slow_modframa_fast, _gmo_slow_modframa_slow)
    else
        if type == "rma"
            rma(src, len)
        else
            if type == "sma"
                sma(src, len)
            else
                if type == "smma"
                    smma(src, len)
                else
